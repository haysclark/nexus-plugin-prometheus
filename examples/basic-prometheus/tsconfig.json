{
  "compilerOptions": {
    "strict": true,
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "noEmit": true,
    "typeRoots": ["node_modules/@types", "types"],
    "rootDir": "api",
    "plugins": [{ "name": "nexus/typescript-language-service" }]
  },
  "include": ["api", "types.d.ts"]
}
